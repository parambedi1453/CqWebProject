<!DOCTYPE html>
<html>
<head>
    <title>CQ</title>
    <meta name="viewport" content="width=device-width" initial-scale="1.0">
    <link href="sidebar.css" rel="stylesheet" type = "text/css">
    <link href="header.css" rel="stylesheet" type = "text/css">
    <link href = "editprofile.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" >
    <!-- BOOTSTRAP 3-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>
<body class="body">
    <% include partials/header.ejs %>
        <div id="viewscreen">
                <% include partials/sidebar.ejs %>

                <div id="rightview">
                    <div class="container-fluid div-min-width" style="padding:0">
                        <div class="row">
                            <div class="col-lg-12 parentDiv" style="padding:0">
                                <!-- MOBILE IMAGE DIV-->
                                <div id="mobile-pic-editpage" style="margin-bottom:80px;">
                                    <img src="default.png" id="blueimg">
                                </div>
                                <!-- NORMAL DIVS BEGIN-->
                                <div class="to-center-div">
                                    <div class="container childDiv">
                                        <div style="margin-top:30px">
                                            <div class="col-12">
                                                <div class="panel panel-default" style="background: rgb(249, 249, 249);box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);">
                                                    <div class="panel-body">

                                                        <div class="d-flex imageDiv">
                                                            <div class="image-container">
                                                                <img src="default.png" id="profilepic">
                                                            </div>
                                                        </div>
                                                        <br>
                                                        <br>

                                                        <!-- FORM DIV BEGINS -->

                                                        <form>
                                                            <div class="panel-group">
                                                                <!-- 1st panel-->
                                                                <div class="panel panel-default">
                                                                    <div class="panel-heading">Basic Info</div>
                                                                    <div class="panel-body">
                                                                        <div class="form-group">
                                                                            <label>Email :</label>
                                                                            <input type="text" class="form-control" name="pusername" id="pusername" value="<%= obj.email %>" required>
                                                                        </div>

                                                                        <div class="form-group">
                                                                            <label>Name :</label>
                                                                            <input type="text" class="form-control" name="pname" id="pname" value="<%= obj.name %>" required>
                                                                        </div>


                                                                    <div class="form-group col-sm-5" style="padding:0;">
                                                                        <label>DOB :</label>
                                                                        <input type="date" class="form-control" name="pdob" id="pdob" required>
                                                                    </div>

                                                                    <div class="form-group col-sm-5 col-sm-push-2" style="padding:0;">
                                                                        <label>Gender :</label>
                                                                        <select name="pgender" id="pgender" class="form-control" value="<%= obj.gender %>">
                                                                            <optgroup label="Select Gender">
                                                                                <option value="male">Male</option>
                                                                                <option value="female">Female</option>
                                                                                <option value="transgender">Transgender</option>
                                                                            </optgroup>
                                                                        </select>
                                                                    </div>
                                                                    </div>
                                                                </div>
                                                                <!-- 2nd Panel -->
                                                                <div class="panel panel-default">
                                                                    <div class="panel-heading">Contact Info</div>
                                                                    <div class="panel-body">
                                                                        <div class="form-group">
                                                                            <label>Phone:</label>
                                                                            <input type="text" class="form-control" name="pphone" id="pphone" value="<%= obj.phone %>" required>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <label>City:</label>
                                                                            <input type="text" class="form-control" name="pcity" id="pcity" value="<%= obj.city %>" required>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!--3rd Panel -->
                                                                <div class="panel panel-default">
                                                                    <div class="panel-heading">Personal Info</div>
                                                                    <div class="panel-body">
                                                                        <div class="form-group">
                                                                            <label>Interests : </label>
                                                                            <textarea type="text" class="form-control" name="aboutinterests" id="pinterest">
                                                                                </textarea>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <label>Tell us a bit more about yourjourney : </label>
                                                                            <textarea type="text" class="form-control" name="aboutjourney" id="pjourney">
                                                                                </textarea>
                                                                        </div>

                                                                        <div class="form-group">
                                                                            <label>What are your expectations from the communities ?</label>
                                                                            <textarea type="text" class="form-control" name="comexpectations" id="pexpectations">
                                                                                </textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <!-- BUTTONS -->
                                                                <div  class="form-group">
                                                                    <a class="btn btn-warning pull-left" style="margin:1px">Change Password</a>
                                                                    <a class="btn btn-danger pull-right" style="margin:1px">Cancel</a>
                                                                    <button  class="btn btn-primary pull-right" style="margin:1px" id="updateButton">Update</button>
                                                                </div>

                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
</body>
<script src="openpanel.js">
</script>
<script src="switcheditprofile.js">
</script>
</html>
